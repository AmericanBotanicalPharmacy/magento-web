<?xml version="1.0"?>
<config>
    <modules>
        <Abp_Onhold>
            <version>1.0</version>
        </Abp_Onhold>
    </modules>
    <global>
        <models>           
            <onhold>
                <class>Abp_Onhold_Model</class>
            </onhold>
        </models>
        <helpers>
            <onhold>
                <class>Abp_Onhold_Helper</class>
            </onhold>
        </helpers>
        <events>
            <sales_order_place_after>
                <observers>
                    <onhold_order>
                        <type>singleton</type>
                        <class>onhold/observer</class>
                        <method>holdOrder</method>
                    </onhold_order>
                </observers>
            </sales_order_place_after>
        </events>
    </global>
</config>