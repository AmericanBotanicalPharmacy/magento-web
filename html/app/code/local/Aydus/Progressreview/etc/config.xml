<config>
    <modules>
        <Aydus_Progressreview>
            <version>0.1.0</version>
        </Aydus_Progressreview>
    </modules>
    <frontend>
        <routers>
            <aydus_progressreview>
                <use>standard</use>
                <args>
                    <module>Aydus_Progressreview</module>
                    <frontName>progressreview</frontName>
                </args>
            </aydus_progressreview>
        </routers>
        <layout>
            <updates>
                <aydus_progressreview>
                    <file>aydus/progressreview.xml</file>
                </aydus_progressreview>
            </updates>
        </layout>    	
    </frontend>
    <global>
        <blocks>
             <aydus_progressreview>
                <class>Aydus_Progressreview_Block</class>
             </aydus_progressreview>
        </blocks>
    </global>    
</config>