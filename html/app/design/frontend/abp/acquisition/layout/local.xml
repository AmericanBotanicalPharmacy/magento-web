        <reference name="product_list">
            <block type="reports/product_viewed" name="reports.product.viewed" template="reports/product_viewed.phtml" />
        </reference>
        <reference name="left_first">
            <action method="unsetChild"><name>catalog.leftnav</name></action>
        </reference>
        <reference name="left">
            <!-- Column count set in list.phtml. -->
            <block type="catalog/navigation" name="catalog.leftnav" before="-" template="catalog/navigation/left.phtml"/>
        </reference>
    </catalog_category_default>

    <!-- Category Layered -->
