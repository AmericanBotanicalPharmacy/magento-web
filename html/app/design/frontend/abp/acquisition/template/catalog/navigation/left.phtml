 */
?>
<h2 class="shop-by">SHOP BY</h2>
<?php $_helper = Mage::helper('catalog/category') ?>
<?php $_categories = $_helper->getStoreCategories() ?>
<?php $currentCategory = Mage::registry('current_category') ?>
<?php $currentUrl = $this->helper('core/url')->getCurrentUrl(); ?>
<?php if (count($_categories) > 0): ?>
    <ul>
        <?php foreach($_categories as $_category): ?>
            <li>
                <?php $categoryURL = $_helper->getCategoryUrl($_category); ?>
                <?php if ($currentUrl == $categoryURL): ?>
                    <a class="parent active" href="<?php echo $_helper->getCategoryUrl($_category) ?>"><?php echo $_category->getName() ?></a>
                <?php else: ?>
                    <a class="parent" href="<?php echo $_helper->getCategoryUrl($_category) ?>"><?php echo $_category->getName() ?></a>
                <?php endif; ?>
                <?php $_category = Mage::getModel('catalog/category')->load($_category->getId()) ?>
                <?php $_subcategories = $_category->getChildrenCategories() ?>
                
                <?php if (count($_subcategories) > 0): ?>
                    <ul>
                        <?php foreach($_subcategories as $_subcategory): ?>
                            <li>
                                <?php $subCategoryURL = $_helper->getCategoryUrl($_subcategory); ?>
                                <?php if ($currentUrl == $subCategoryURL): ?>
                                    <a class="active" href="<?php echo $subCategoryURL ?>"><?php echo $_subcategory->getName() ?></a>
                                <?php else: ?>
                                    <a href="<?php echo $subCategoryURL ?>"><?php echo $_subcategory->getName() ?></a>
                                <?php endif; ?> 
                            </li>
                        <?php endforeach; ?>
                    </ul>
                <?php endif; ?>
            </li>
        <?php endforeach; ?>
    </ul>
<?php endif; ?>
<div class="block" style="margin-top:30px;">
    <?php echo $this->getLayout()->createBlock('cms/block')->setBlockId('category_menu_left_promo')->toHtml(); ?>
</div>